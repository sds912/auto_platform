{% extends 'base.html.twig' %}

{% block title %}login{% endblock %}

{% block body %}
    <div class="container">
        <div class="card w-50 mx-auto" style="margin-top: 12%">
            <div class="card-body">
                <h3 class="text-center">Connexion</h3>
                {% if error  %}
                <div class="alert alert-danger">
                    {{error.messageKey | trans(error.messagedata, 'security')}}
                </div>
                {% endif %}
                <form action="{{ path('security.login')}}" method="post">
                    <div class="form-group">
                        <label for="_username">Username</label>
                        <input class="form-control" type="text" name="_username" id="username" value="{{ last_username}}">
                    </div>
                    <div class="form-group">
                            <label for="_password">Password</label>
                            <input class="form-control" type="password" name="_password" id="password">
                    </div>
                    <button  type="submit" class="btn btn-primary">Login</button>
                </form>
                <p class="mt-3">pas encore de compte ? <a href="{{path('security.register')}}">S'inscrire</a></p>
            </div>
        </div>
    </div>
{% endblock %}
