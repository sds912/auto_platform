{% extends 'base.html.twig' %}

{% block title %}register{% endblock %}

{% block body %}
   <div class="container">
      {{form_start(form)}}
      <div class="card w-50 mx-auto" style="margin-top:8%">
         <div class="card-body">
               <h3 class="text-center">Inscription</h3>

            <div class="form-group">
               {{form_row(form.username,{'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
               {{form_row(form.email,{'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
               {{form_row(form.password,{'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
               {{form_row(form.confirm_password,{'attr':{'class':'form-control'}})}}
            </div>
            <button class="btn btn-primary" type="submit">S'inscrire</button>
            <p class="mt-3">Vous avez deja un compte ? <a href="{{path('security.login')}}">Se connecter</a></p>

         </div>
      </div>
      {{form_end(form)}}
   </div>
{% endblock %}
